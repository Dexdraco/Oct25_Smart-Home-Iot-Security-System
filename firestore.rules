rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can only read/write their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Alerts can be read by authenticated users, written by devices
    match /alerts/{alertId} {
      allow read: if request.auth != null;
      allow write: if 
        // Device write (using device token)
        request.resource.data.deviceToken == 'VALID_DEVICE_TOKEN' ||
        // User write for testing
        request.auth != null;
    }
    
    // Devices can be managed by their owners
    match /devices/{deviceId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && 
        request.resource.data.ownerId == request.auth.uid;
    }
  }
}